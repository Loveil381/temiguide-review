<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screenListening"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left Pane: Mic Visualizer -->
        <FrameLayout
            android:id="@+id/listeningMicPane"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_transparent_50">

            <!-- Pulse rings -->
            <View
                android:id="@+id/listeningRing1"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_primary_circle_faint"
                android:alpha="0.5" />
            <View
                android:id="@+id/listeningRing2"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_primary_circle_ripple"
                android:alpha="0.6" />
            <View
                android:id="@+id/listeningRing3"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_primary_circle_ripple"
                android:alpha="0.8" />

            <!-- Core mic button -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_primary_circle"
                android:elevation="8dp">
                <ImageView
                    android:id="@+id/ivListeningMicIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:contentDescription="マイク"
                    app:tint="@color/white" />
            </FrameLayout>

            <!-- Status badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="120dp"
                android:background="@drawable/bg_badge_neutral"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <View
                    android:id="@+id/listeningDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_primary_circle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/listening_status"
                    android:textColor="@color/brand_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAllCaps="true" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="90dp"
                android:text="@string/listening_hint"
                android:textColor="@color/text_sub"
                android:textSize="13sp" />

            <!-- Countdown timer -->
            <TextView
                android:id="@+id/tvListeningCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="48dp"
                android:textColor="@color/text_muted"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Right Pane: Transcription -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="32dp">

            <!-- End Session button -->
            <TextView
                android:id="@+id/btnEndSession"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end|top"
                android:background="@drawable/bg_card"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="@string/end_session"
                android:textColor="@color/text_main"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:elevation="2dp" />

            <!-- Transcription card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="64dp"
                android:background="@drawable/bg_transcription_card"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="40dp">

                <!-- Live text -->
                <TextView
                    android:id="@+id/tvLiveTranscription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_main"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    tools:text="Where can I find Heattech vests?" />

                <!-- Suggestions -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/neutral_100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/suggestions_label"
                        android:textColor="@color/text_light_gray"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_badge_neutral"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="@string/suggestion_1"
                        android:textColor="@color/text_sub"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_badge_neutral"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="@string/suggestion_2"
                        android:textColor="@color/text_sub"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
