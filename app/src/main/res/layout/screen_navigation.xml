<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screenNavigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp">

        <!-- Shop Guide Badge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge_primary"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="8dp"
            android:drawableTint="@color/brand_primary"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/brand_name"
            android:textColor="@color/brand_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true" />

        <!-- Destination name -->
        <TextView
            android:id="@+id/tvNavDestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/text_main"
            android:textSize="64sp"
            android:textStyle="bold"
            tools:text="MENS HEATTECH" />

        <!-- Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ivNavSync"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_popup_sync"
                android:contentDescription="同期中"
                app:tint="@color/text_muted" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/nav_heading"
                android:textColor="@color/text_muted"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Progress section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">

            <!-- Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_current_location"
                        android:textColor="@color/text_muted"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tvNavStartLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_start_point"
                        android:textColor="@color/text_main"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_destination"
                        android:textColor="@color/brand_primary"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tvNavEndLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brand_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="Zone C" />
                </LinearLayout>
            </LinearLayout>

            <!-- Progress bar -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="16dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_progress_track" />
                <View
                    android:id="@+id/viewNavProgressFill"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_progress_fill" />
                <!-- Robot marker -->
                <FrameLayout
                    android:id="@+id/viewNavMarker"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:translationY="-20dp"
                    android:background="@drawable/bg_primary_circle"
                    android:elevation="8dp">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:contentDescription="ロボット"
                        app:tint="@color/white" />
                </FrameLayout>
            </FrameLayout>

            <!-- ETA -->
            <TextView
                android:id="@+id/tvNavEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_badge_neutral"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                tools:text="Estimated arrival in 45 seconds" />
        </LinearLayout>

        <!-- Stop button -->
        <TextView
            android:id="@+id/btnStopGuidance"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="48dp"
            android:layout_marginHorizontal="200dp"
            android:background="@drawable/bg_button_outlined"
            android:gravity="center"
            android:text="@string/nav_stop"
            android:textColor="@color/text_main"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="2dp" />
    </LinearLayout>
</FrameLayout>
