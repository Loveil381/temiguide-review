<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screenIdle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:clickable="true"
    android:focusable="true"
    android:visibility="visible">

    <!-- Subtle animated background overlay (glow) -->
    <View
        android:id="@+id/viewIdleBgGlow"
        android:layout_width="1200dp"
        android:layout_height="1200dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_primary_circle_faint"
        android:alpha="0.1" />

    <!-- ===== HEADER ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="48dp"
        android:paddingTop="32dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvIdleClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.04"
                    tools:text="14:30" />
                <TextView
                    android:id="@+id/tvIdleAmPm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/text_muted"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="PM" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_online_badge"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:id="@+id/viewOnlineDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_green_circle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/idle_online"
                    android:textAllCaps="true"
                    android:textColor="#15803D"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== CENTER CONTENT ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="48dp">

        <!-- Interactive Cat Area with Halos -->
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:clipChildren="false">
            
            <!-- Animated Halo Rings -->
            <View
                android:id="@+id/idleHalo1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_primary_circle_ripple" />
            <View
                android:id="@+id/idleHalo2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_primary_circle_ripple" />
            <View
                android:id="@+id/idleHalo3"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_primary_circle_ripple" />

            <!-- Breathing shadow/platform base -->
            <View
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_primary_circle_faint"
                android:scaleY="0.5"
                android:alpha="0.4" />

            <!-- Floating Cat Character -->
            <FrameLayout
                android:id="@+id/idleRobotContainer"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center">
                
                <ImageView
                    android:id="@+id/ivCatConcierge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avd_cat_concierge_idle"
                    android:contentDescription="猫コンシェルジュ"
                    android:elevation="12dp" />
            </FrameLayout>
        </FrameLayout>

        <!-- CTA area -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/idle_cta_ja"
            android:textColor="@color/text_main"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <!-- Pulsing Interactive Button -->
        <LinearLayout
            android:id="@+id/llIdleCta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_pill_primary"
            android:paddingHorizontal="48dp"
            android:paddingVertical="20dp"
            android:gravity="center"
            android:elevation="12dp">
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mic_premium"
                app:tint="@color/white" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="タッチしてお話しください"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:letterSpacing="0.04" />
        </LinearLayout>
        
        <!-- Bouncing arrow -->
        <ImageView
            android:id="@+id/ivIdleBounceArrow"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="矢印"
            app:tint="@color/brand_primary"
            android:alpha="0.8" />
    </LinearLayout>

    <!-- ===== FOOTER: Branding bar ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_branding_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:paddingVertical="20dp"
            android:elevation="8dp">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_storefront_icon">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:contentDescription="店舗"
                    app:tint="@color/white" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brand_name"
                    android:textAllCaps="true"
                    android:textColor="@color/text_main"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.25" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/brand_concierge"
                    android:textAllCaps="true"
                    android:textColor="@color/text_muted"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="160dp"
            android:layout_height="6dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_home_indicator" />
    </LinearLayout>
</FrameLayout>
