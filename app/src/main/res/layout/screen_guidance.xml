<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screenGuidance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left: Message -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="48dp">

                <!-- Robot icon -->
                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bg_primary_circle_faint">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:contentDescription="ロボット"
                        app:tint="@color/brand_primary" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvGuidanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guidance_title"
                    android:textColor="@color/text_main"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.0" />

                <View
                    android:layout_width="96dp"
                    android:layout_height="8dp"
                    android:layout_marginVertical="24dp"
                    android:background="@color/brand_primary" />

                <TextView
                    android:id="@+id/tvGuidanceSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guidance_subtitle"
                    android:textColor="@color/text_muted"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- Bottom: Robot Active indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_margin="48dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_green_circle" />
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_green_circle" />
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_green_circle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/robot_active"
                    android:textColor="@color/text_light_gray"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Right: Destination -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_destination_panel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/destination_label"
                    android:textColor="@color/white_transparent_80"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvGuidanceDestName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="64sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginBottom="40dp"
                    tools:text="MENS\nHEATTECH" />

                <!-- Directional arrow circle -->
                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/ic_mic_background"
                    android:elevation="16dp">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_send"
                        android:contentDescription="ナビゲーション"
                        app:tint="@color/brand_primary"
                        android:rotation="0" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/moving_forward"
                    android:textColor="@color/white_transparent_80"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Header overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_pill_primary"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/brand_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="4dp" />
    </LinearLayout>
</FrameLayout>
