<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <!-- Cat Body/Head Base -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M 40,120 C 40,60 160,60 160,120 C 180,180 160,200 100,200 C 40,200 20,180 40,120 Z" />

    <!-- Left Ear Group -->
    <group
        android:name="group_left_ear"
        android:pivotX="60"
        android:pivotY="70">
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M 40,90 L 30,30 L 90,60 Z" />
        <path
            android:fillColor="#FFCDD2"
            android:pathData="M 45,80 L 40,45 L 75,65 Z" />
    </group>

    <!-- Right Ear Group -->
    <group
        android:name="group_right_ear"
        android:pivotX="140"
        android:pivotY="70">
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M 160,90 L 170,30 L 110,60 Z" />
        <path
            android:fillColor="#FFCDD2"
            android:pathData="M 155,80 L 160,45 L 125,65 Z" />
    </group>

    <!-- Face Details -->
    <group
        android:name="group_face"
        android:pivotX="100"
        android:pivotY="120">
        
        <!-- Left Eye (Will scale for blinking) -->
        <group
            android:name="group_left_eye"
            android:pivotX="70"
            android:pivotY="110">
            <path
                android:fillColor="#333333"
                android:pathData="M 70,100 C 60,100 60,120 70,120 C 80,120 80,100 70,100 Z" />
            <!-- Eye highlight -->
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M 72,104 C 69,104 69,110 72,110 C 75,110 75,104 72,104 Z" />
        </group>

        <!-- Right Eye (Will scale for blinking) -->
        <group
            android:name="group_right_eye"
            android:pivotX="130"
            android:pivotY="110">
            <path
                android:fillColor="#333333"
                android:pathData="M 130,100 C 120,100 120,120 130,120 C 140,120 140,100 130,100 Z" />
            <!-- Eye highlight -->
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M 132,104 C 129,104 129,110 132,110 C 135,110 135,104 132,104 Z" />
        </group>

        <!-- Nose -->
        <path
            android:fillColor="#FF8A80"
            android:pathData="M 100,130 C 95,130 95,125 100,125 C 105,125 105,130 100,130 Z" />

        <!-- Mouth -->
        <path
            android:strokeColor="#333333"
            android:strokeWidth="3"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:pathData="M 85,135 C 95,145 100,130 100,130 C 100,130 105,145 115,135" />

        <!-- Whiskers Left -->
        <path
            android:strokeColor="#DDDDDD"
            android:strokeWidth="2"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:pathData="M 40,120 L 70,125 M 35,135 L 68,135 M 40,150 L 70,145" />

        <!-- Whiskers Right -->
        <path
            android:strokeColor="#DDDDDD"
            android:strokeWidth="2"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:pathData="M 160,120 L 130,125 M 165,135 L 132,135 M 160,150 L 130,145" />

    </group>

    <!-- Chest / Bowtie Area (Animated for breathing) -->
    <group
        android:name="group_chest"
        android:pivotX="100"
        android:pivotY="180">
        
        <!-- Red Bowtie (Brand color #EC1325) -->
        <path
            android:fillColor="#EC1325"
            android:pathData="M 100,175 L 70,160 L 70,190 Z" />
        <path
            android:fillColor="#EC1325"
            android:pathData="M 100,175 L 130,160 L 130,190 Z" />
        <path
            android:fillColor="#B00E1B"
            android:pathData="M 100,175 C 93,175 93,185 100,185 C 107,185 107,175 100,175 Z" />
            
        <!-- Floating Tail behind body -->
        <group
            android:name="group_tail"
            android:pivotX="160"
            android:pivotY="160">
            <path
                android:strokeColor="#FFFFFF"
                android:strokeWidth="16"
                android:strokeLineCap="round"
                android:fillColor="#00000000"
                android:pathData="M 150,160 C 180,160 190,130 180,100 C 175,80 190,70 190,70" />
        </group>
    </group>

</vector>
