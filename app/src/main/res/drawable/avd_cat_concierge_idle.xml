<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_cat_concierge_base">

    <!-- Blink Left Eye -->
    <target android:name="group_left_eye">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <!-- Wait 3 seconds -->
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="3000"
                    android:valueFrom="1.0"
                    android:valueTo="1.0" />
                <!-- Blink Down -->
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="100"
                    android:valueFrom="1.0"
                    android:valueTo="0.1"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <!-- Blink Up -->
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="100"
                    android:valueFrom="0.1"
                    android:valueTo="1.0"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>

    <!-- Blink Right Eye -->
    <target android:name="group_right_eye">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <!-- Wait 3 seconds -->
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="3000"
                    android:valueFrom="1.0"
                    android:valueTo="1.0" />
                <!-- Blink Down -->
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="100"
                    android:valueFrom="1.0"
                    android:valueTo="0.1"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <!-- Blink Up -->
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="100"
                    android:valueFrom="0.1"
                    android:valueTo="1.0"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>

    <!-- Ear Twitch Left -->
    <target android:name="group_left_ear">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="2000"
                    android:valueFrom="0"
                    android:valueTo="0" />
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="100"
                    android:valueFrom="0"
                    android:valueTo="-15"
                    android:interpolator="@android:anim/linear_interpolator" />
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="100"
                    android:valueFrom="-15"
                    android:valueTo="0"
                    android:interpolator="@android:anim/linear_interpolator" />
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="1000"
                    android:valueFrom="0"
                    android:valueTo="0" />
            </set>
        </aapt:attr>
    </target>

    <!-- Ear Twitch Right -->
    <target android:name="group_right_ear">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="4000"
                    android:valueFrom="0"
                    android:valueTo="0" />
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="100"
                    android:valueFrom="0"
                    android:valueTo="15"
                    android:interpolator="@android:anim/linear_interpolator" />
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="100"
                    android:valueFrom="15"
                    android:valueTo="0"
                    android:interpolator="@android:anim/linear_interpolator" />
            </set>
        </aapt:attr>
    </target>

    <!-- Tail Wagging -->
    <target android:name="group_tail">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="1500"
                android:valueFrom="-5"
                android:valueTo="5"
                android:repeatCount="-1"
                android:repeatMode="reverse"
                android:interpolator="@android:interpolator/fast_out_slow_in" />
        </aapt:attr>
    </target>

    <!-- Breathing (Chest inflation) -->
    <target android:name="group_chest">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="2000"
                android:valueFrom="1.0"
                android:valueTo="1.03"
                android:repeatCount="-1"
                android:repeatMode="reverse"
                android:interpolator="@android:interpolator/fast_out_slow_in" />
        </aapt:attr>
    </target>

</animated-vector>
